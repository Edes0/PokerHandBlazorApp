@page "/CardGame"

@inject IServiceManager serviceManager

@using Entities
@using Service.Contracts
@using SharedObjects.DataTransferObjects

<h3>CardGame</h3>

@if (hand is null)
{
    <p><em>Loading...</em></p>
}
else
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Suit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var card in hand.Cards)
        {
            <tr>
                <td>@card.RankChar</td>
                <td>@card.SuitChar</td>
            </tr>
        }
    </tbody>
</table>
}

@code {
    CardDeck cardDeck = new(1);
    CardDeck? throwDeck;
    HandForCreationDto? hand;


    protected override async Task OnInitializedAsync()
    {
        ShuffleCardDeck();
        AddCardsToHand(5);
    }

    private void ShuffleCardDeck()
    {
        cardDeck.Shuffle();
    }

    private void AddCardsToHand(int amount)
    {
        hand.Cards = cardDeck.Cards.Take(amount).ToList();
        serviceManager.HandService.CreateHandAsync(hand);
    }
}
